<script type="text/javascript">
    function CheckOut() {

        var card = $("#txtCardNumber").val();
        $.get('/Payment/CheckOut', { cardNo: card }, function (data) {
            $('#payresult').html(data);
            $("#txtCardNumber").val("");
        });
    }
</script>
<script src="../../Scripts/jquery-1.6.2.js" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.2.min.js" type="text/javascript"></script>
<script type="text/javascript" src="../../Scripts/StoreOnline.js"></script>
@{
    ViewBag.Title = "Index";
}
<h2>
    Payment Details</h2>
<table border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            Card Number:
        </td>
        <td>
            <input type="text" name="txtCardNumber" id="txtCardNumber" />
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="button" name="btnPay" id="btnPay" value="Submit" onclick="javascript:CheckOut();return false;" />
        </td>
    </tr>
</table>
<div id="payresult">
</div>
